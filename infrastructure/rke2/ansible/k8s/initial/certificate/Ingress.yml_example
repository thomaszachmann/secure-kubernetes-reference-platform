apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: app
  namespace: default
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-dns01
spec:
  tls:
    - hosts:
        - {{ .Values.dns }}
      secretName: app-example-com-tls
  rules:
    - host: {{ .Values.dns }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: deine-service
                port:
                  number: 80

